# Nginx Server Configuration for Historical World Map (v2 - SvelteKit + TopoJSON)
# Serve the built static site from the build/ directory
#
# Usage: Place in /etc/nginx/sites-available/historical-world-map

server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com;

    # Document root points to SvelteKit build output
    root /path/to/historical-world-map/build;
    index index.html;

    # GZip Compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/javascript
        application/javascript
        application/json
        application/xml
        image/svg+xml;
    gzip_min_length 1000;

    # Hashed static assets (immutable - 1 year)
    location ~* \/_app\/immutable\/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # TopoJSON data - cache for 1 week
    location /data/ {
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
        add_header Access-Control-Allow-Origin "*";
        add_header Access-Control-Allow-Methods "GET, OPTIONS";
        try_files $uri =404;
    }

    # HTML - no cache
    location ~* \.(html|htm)$ {
        expires -1;
        add_header Cache-Control "no-cache, must-revalidate";
    }

    # SVG, CSS, JS outside _app/immutable
    location ~* \.(css|js|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Security Headers
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # CSP: blob: needed for Web Workers
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://*.cartocdn.com https://*.openstreetmap.org; font-src 'self' https://fonts.gstatic.com; worker-src 'self' blob:; frame-ancestors 'none';" always;

    # Main location block - SPA fallback
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Prevent access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Logging
    access_log /var/log/nginx/historical-world-map-access.log;
    error_log /var/log/nginx/historical-world-map-error.log warn;
}

